                            <Style TargetType="{x:Type DataGridRow}"/>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>

                            <DataGridTextColumn
                                Binding="{Binding adSoyad}" IsReadOnly="True" Header="Ad Soyad"  >

